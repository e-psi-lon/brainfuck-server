{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" }
  ],
  "wordPattern": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b|\\bC[0-9]+\\b|\\bSYS_[A-Z_]+\\b",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(while:|.*\\{\\s*$)",
    "decreaseIndentPattern": "^\\s*(endwhile|\\})"
  }
}
