{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^.*(while\\s+.+:|\\{)\\s*$",
    "decreaseIndentPattern": "^\\s*(endwhile|\\})\\s*$"
  },
  "folding": {
    "markers": {
      "start": "^\\s*(while\\s+.+:|\\{)\\s*$",
      "end": "^\\s*(endwhile|\\})\\s*$"
    }
  }
}
